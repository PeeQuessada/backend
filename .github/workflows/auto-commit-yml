name: Auto commit
env:
  CI: ""
on:
  workflow_dispatch:

jobs:
  apply:
    name: 'Auto commit'
    runs-on: ubuntu-20.04

    permissions:
      id-token: write
      contents: [read, write]

    env:
      GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

    steps:
      - uses: actions/checkout@v3
        with:
          persist-credentials: false # otherwise, the token used is the GITHUB_TOKEN, instead of your personal token
          fetch-depth: 0 # otherwise, you will failed to push refs to dest repo

      - name: Define terraform vars
        run: |
          echo "access_key = aaaaaaa" >> aaa.txt

      - name: Commit terraform state file
        run: |
          git config --global user.name 'Pedro Quessada'
          git config --global user.email 'pedro.rafael.quessada@gmail.com'
          git add .
          git commit -m "Automatic commit"
          git remote set-url --push origin https://PeeQuessada:${{ secrets.GITHUB_TOKEN }}@github.com/backend